{
    "name": "amyavari/iran-payment-laravel",
    "description": "A simple and convenient way to connect your app to Iranian payment providers",
    "keywords": [
        "payment",
        "laravel",
        "iran",
        "iran-payment-laravel",
        "amyavari"
    ],
    "type": "library",
    "homepage": "https://github.com/amyavari/iran-payment-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Mohammad Yavari",
            "email": "ali.m.yavari70@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.92",
        "illuminate/contracts": "^11.44|^12.23"
    },
    "require-dev": {
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.26",
        "nunomaduro/mock-final-classes": "^1.2",
        "orchestra/testbench": "^9.13|^10.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "AliYavari\\IranPayment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AliYavari\\IranPayment\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint -v",
        "refactor": "rector process --ansi",
        "test:lint": "pint --test -v",
        "test:refactor": "rector process --dry-run --ansi",
        "test:types": "phpstan analyse --configuration=phpstan.neon.dist --ansi --memory-limit=1G",
        "test:type-coverage": "pest --colors=always --type-coverage --parallel",
        "test:unit": "pest --colors=always --coverage",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:type-coverage",
            "@test:unit"
        ]
    },
    "scripts-descriptions": {
        "lint": "Run Laravel Pint to automatically fix code style issues.",
        "refactor": "Run Rector to automatically refactor code.",
        "test:coverage": "Run unit tests with code coverage report.",
        "test:lint": "Run Laravel Pint to check code style without fixing issues.",
        "test:refactor": "Run Rector to check refactor needs without fixing issues.",
        "test:types": "Run static analysis to check for type errors in the codebase.",
        "test:unit": "Run unit tests using Pest."
    },
    "extra": {
        "laravel": {
            "providers": [
                "AliYavari\\IranPayment\\IranPaymentServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
